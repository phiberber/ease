{
  "name": "ease",
  "version": "0.2.1",
  "description": "Ease Programming Language",
  "repository": "https://github.com/phiberber/ease.git",
  "author": "phiberber <phiberberian@gmail.com>",
  "bin": "src/Ease.ts",
  "license": "MIT",
  "scripts": {
    "test:fibonacci": "esr src/Cli.ts test/web/fibonacci.se",
    "test:hello": "esr src/Cli.ts test/web/hello.se",
    "test:http": "esr src/Cli.ts test/web/http.se",
    "test:lucas": "esr src/Cli.ts test/web/lucas.se",
    "deploy:vercel": "cp -r test/web/ dist/ && npm run bundle:browser",
    "bundle:node": "esbuild ./src/Cli.ts --inject:src/interpreter/modules/nodeModules.ts --platform=node --bundle --outfile=dist/ease.js",
    "bundle:browser": "esbuild ./src/Ease.ts --inject:src/interpreter/modules/browserModules.ts --platform=browser --bundle --outfile=dist/ease-browser.js",
    "bundle": "npm run bundle:node && npm run bundle:browser",
    "build": "npm run bundle && pkg --compress Brotli dist/ease.js --out-path dist"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "esbuild": "^0.14.25",
    "esbuild-runner": "^2.2.1",
    "express": "^4.18.1",
    "pkg": "^5.7.0"
  },
  "release-it": {
    "hooks": {
      "before:init": "npm run build"
    },
    "npm": {
      "publish": false
    },
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false,
      "preRelease": true,
      "releaseName": "Pre release ${version}",
      "assets": [
        "dist/ease-linux",
        "dist/ease-macos",
        "dist/ease-win.exe"
      ]
    }
  }
}
