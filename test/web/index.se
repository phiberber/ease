import browser

fun h(tag, content, parent) {
  let node = document.createElement(tag)
  node.innerHTML = content
  parent.appendChild(node)
}

let count = 0
let body = document.body

let titleElement = h('h1', "ðŸ‘‹ Yo, I'm alive!", document.body)
let descriptionElement = h('p', "This is a counter example written fully in Ease, it has been deployed to Vercel with a perfect Lighthouse performance score", document.body)
let descriptionEmojiElement = h('span', ' ðŸ¤¯.', descriptionElement)
let wrapper = h('div', '', document.body)
let githubElement = h('a', '@phiberber/ease', document.body)

githubElement.href = 'https://github.com/phiberber/ease'
githubElement.target = '_blank'

let increaseElement = h('button', '+', wrapper)
let countElement = h('span', 0, wrapper)
let decreaseElement = h('button', '-', wrapper)

fun update(amount): countElement.innerText = count += amount
fun increase(): update(1)
fun decrease(): update(-1)

increaseElement.onclick = increase
decreaseElement.onclick = decrease